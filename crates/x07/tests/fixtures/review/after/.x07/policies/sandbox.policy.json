{
  "schema_version": "x07.run-os-policy@0.1.0",
  "policy_id": "sandbox",
  "limits": {
    "cpu_ms": 2000,
    "wall_ms": 4000,
    "mem_bytes": 67108864,
    "fds": 32,
    "procs": 8
  },
  "fs": {
    "enabled": true,
    "read_roots": ["."],
    "write_roots": ["."],
    "deny_hidden": true
  },
  "net": {
    "enabled": true,
    "allow_dns": true,
    "allow_tcp": true,
    "allow_udp": false,
    "allow_hosts": [{ "host": "example.com", "ports": [443] }]
  },
  "db": {
    "enabled": false,
    "drivers": {
      "sqlite": false,
      "postgres": false,
      "mysql": false,
      "redis": false
    }
  },
  "env": {
    "enabled": true,
    "allow_keys": ["HOME"],
    "deny_keys": []
  },
  "time": {
    "enabled": true,
    "allow_monotonic": true,
    "allow_wall_clock": true,
    "allow_sleep": false,
    "max_sleep_ms": 0,
    "allow_local_tzid": false
  },
  "language": {
    "allow_unsafe": true,
    "allow_ffi": true
  },
  "process": {
    "enabled": true,
    "allow_spawn": true,
    "max_live": 4,
    "max_spawns": 8,
    "allow_execs": ["/bin/echo"],
    "allow_exec_prefixes": [],
    "allow_args_regex_lite": [],
    "allow_env_keys": [],
    "allow_exec": true,
    "allow_exit": true
  }
}
