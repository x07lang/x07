FROM rust:1-bookworm

RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    ca-certificates \
    clang \
    git \
    lld \
    pkg-config \
    python3 \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /work
COPY . /work

CMD ["python3", "labs/scripts/examples/run_release_examples.py", "--all", "--cargo-profile", "release"]
