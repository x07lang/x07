    {
      "id": "net.sockets",
      "summary": "Low-level sockets for OS worlds.",
      "canonical": { "name": "ext-sockets-c", "version": "0.1.3" },
      "worlds": ["run-os", "run-os-sandboxed"],
      "status": "stable"
    },
    {
      "id": "url.parse",
      "summary": "Parse and normalize URLs; stable URL primitives.",
      "canonical": { "name": "ext-url-rs", "version": "0.1.2" },
      "status": "stable"
    },
    {
      "id": "data.json",
      "summary": "JSON parse/encode.",
      "canonical": { "name": "ext-json-rs", "version": "0.1.2" },
      "status": "stable"
    },
    {
      "id": "data.yaml",
      "summary": "YAML parse/encode.",
      "canonical": { "name": "ext-yaml-rs", "version": "0.1.2" },
      "status": "stable"
    },
    {
      "id": "data.csv",
      "summary": "CSV parse/encode.",
      "canonical": { "name": "ext-csv-rs", "version": "0.1.2" },
